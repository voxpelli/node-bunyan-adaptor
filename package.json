{
  "name": "bunyan-adaptor",
  "version": "3.0.0",
  "description": "Maps the major Bunyan logging methods to custom methods",
  "homepage": "http://github.com/voxpelli/node-bunyan-adaptor",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/node-bunyan-adaptor"
  },
  "author": {
    "name": "Pelle Wessman",
    "email": "pelle@kodfabrik.se",
    "url": "http://kodfabrik.se/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "./index.js",
  "scripts": {
    "check:eslint": "eslint --ext .js --ext .jsx .",
    "check:tsc": "tsc",
    "check": "run-p check:*",
    "declaration:build": "rm -f index.d.ts && tsc -p declaration.tsconfig.json",
    "declaration:check": "git diff --exit-code -- index.d.ts",
    "declaration": "run-s declaration:*",
    "test:mocha": "NODE_ENV=test nyc --reporter=lcov --reporter text mocha test/*.spec.js",
    "test": "run-s declaration check test:*"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.3",
