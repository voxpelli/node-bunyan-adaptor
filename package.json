{
  "name": "bunyan-adaptor",
  "version": "3.0.1",
  "description": "Maps the major Bunyan logging methods to custom methods",
  "homepage": "http://github.com/voxpelli/node-bunyan-adaptor",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/node-bunyan-adaptor"
  },
  "author": {
    "name": "Pelle Wessman",
    "email": "pelle@kodfabrik.se",
    "url": "http://kodfabrik.se/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "./index.js",
  "scripts": {
    "check:eslint": "eslint --ext .js --ext .jsx .",
    "check:tsc": "tsc",
    "declaration:build": "rm -f index.d.ts && tsc -p declaration.tsconfig.json",
    "declaration:check": "git diff --exit-code -- index.d.ts",
    "full-test": "run-s declaration:* test",
    "test:mocha": "NODE_ENV=test nyc --reporter=lcov --reporter text mocha test/*.spec.js",
    "test": "run-p check:* && run-s test:*",
    "prepublishOnly": "npm run --silent full-test"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run --silent full-test"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.0",
    "@types/sinon": "^7.0.3",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.9",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "typescript": "^3.7.2"
  }
}
